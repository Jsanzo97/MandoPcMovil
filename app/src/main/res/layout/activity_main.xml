<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="ocultarTeclado"
    tools:context=".FuncionesPrincipales.MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="Mando Pc"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#fff" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="100dp"
            android:paddingTop="5dp"
            android:text="Develop by Jsanzo97Â®"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#fff"
            android:textSize="18sp" />

    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/ip"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="186dp"
        android:ems="10"
        android:hint="Introduzca aqui la IP"
        android:textAlignment="center"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/conectar"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:onClick="conectar"
        android:text="Conectar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/predeterminada" />

    <Button
        android:id="@+id/instrucciones"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:onClick="instrucciones"
        android:text="Instrucciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conectar" />

    <CheckBox
        android:id="@+id/predeterminada"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Establecer como predeterminada"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ip" />


</android.support.constraint.ConstraintLayout>